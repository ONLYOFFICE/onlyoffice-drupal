{
    "name": "onlyoffice/onlyoffice-drupal",
    "type": "drupal-module",
    "description": "The ONLYOFFICE module enables users to edit files in the Media module from Drupal using ONLYOFFICE Docs packaged as Document Server",
    "keywords": ["onlyoffice", "drupal"],
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.onlyoffice.com",
    "authors": [
        {
            "name": "Ascensio System SIA",
            "email": "integration@onlyoffice.com",
            "homepage": "https://www.onlyoffice.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/ONLYOFFICE/onlyoffice-drupal/issues",
        "source": "https://github.com/ONLYOFFICE/onlyoffice-drupal",
        "email": "support@onlyoffice.com",
        "forum": "https://forum.onlyoffice.com/"
    },
    "require": {
        "drupal/core": "~10.2.11 || ^10.3.9 || ^11.0.8",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "captainhook/plugin-composer": "^5.3",
        "ramsey/conventional-commits": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "captainhook/plugin-composer": true
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md,yml --ignore=*/node_modules/*,*/bower_components/*,*/vendor/*,CHANGELOG.md ./"
    }
}
